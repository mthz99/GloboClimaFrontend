@{
    ViewBag.Title = "Consultar País";
}

<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@700&display=swap" rel="stylesheet">
<style>
    .gc-form-container {
        background: #2d253a;
        color: #d1c3f7;
        padding: 32px;
        border-radius: 12px;
        max-width: 600px;
        margin: 0 auto;
        font-family: 'Orbitron', 'Segoe UI', sans-serif;
        box-shadow: 0 2px 16px 0 #00000040;
    }
    .gc-form-title {
        text-align: center;
        color: #d1c3f7;
        font-family: 'Orbitron', 'Segoe UI', sans-serif;
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 18px;
    }
    .gc-form-label {
        color: #d1c3f7;
        font-size: 1.1rem;
        margin-bottom: 6px;
        font-family: 'Orbitron', 'Segoe UI', sans-serif;
    }
    .gc-form-input {
        width: 100%;
        padding: 8px;
        border-radius: 6px;
        border: none;
        background: #b18aff33;
        color: #fff;
        font-size: 1rem;
        margin-bottom: 16px;
        font-family: 'Orbitron', 'Segoe UI', sans-serif;
    }
    .gc-form-button {
        background: linear-gradient(90deg, #a020f0 0%, #7c3aed 100%);
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 10px 0;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        width: 100%;
        font-family: 'Orbitron', 'Segoe UI', sans-serif;
        margin-bottom: 10px;
    }
    .gc-form-desc {
        color: #fff;
        font-size: 1rem;
        text-align: center;
        margin-bottom: 18px;
        font-family: 'Orbitron', 'Segoe UI', sans-serif;
    }
</style>

<div class="gc-form-container">
    <div class="gc-form-title">Consultar País</div>
    <div class="gc-form-desc">Preencha o nome do país abaixo para consultar informações climáticas do país.</div>
    <form method="post" action="/Consult/ConsultCountryPost">
        <label for="nomePais" class="gc-form-label">Nome do País</label>
        <input type="text" id="nomePais" name="nomePais" required class="gc-form-input" placeholder="Ex: Brasil" />
        <button type="submit" class="gc-form-button">Consultar</button>
    </form>
    <!-- Resultado da consulta -->
    @if (ViewBag.CountryNotFound == true)
    {
        <div style="margin-top:2rem; background:#2a2236; border-radius:12px; box-shadow:0 2px 8px rgba(0,0,0,0.15); padding:2rem; max-width:700px; margin-left:auto; margin-right:auto; color:#fff; text-align:center;">
            <img src="/font/bootstrap-icons-1.13.1/exclamation-triangle-fill.svg" alt="Cidade não encontrada" style="width:48px; height:48px; filter:invert(1); margin-bottom:1rem;" />
            <div style="font-family:'Orbitron',sans-serif; font-size:1.5rem; color:#ff4c4c; margin-bottom:1rem;">Não foi encontrado nenhum pais com esse nome, tente novamente</div>
        </div>
    }
    else if (ViewBag.CountryResult != null)
    {
        var countries = Newtonsoft.Json.JsonConvert.DeserializeObject<dynamic>(ViewBag.CountryResult);
        if (countries == null || countries.Count == 0 || countries[0] == null)
        {
            <div style="margin-top:32px; text-align:center; color:#b18aff; font-family:'Orbitron',sans-serif; font-size:1.2rem;">Não foi encontrado nenhum país com esse nome.</div>
        }
        else
        {
            var pais = countries[0];
            <div style="margin-top:24px;">
                <div style="text-align:center;">
                    <div style="font-family:'Orbitron',sans-serif; color:#b18aff; font-size:1.1rem; margin-bottom:8px;">Bandeira &nbsp; - &nbsp; Brasão</div>
                    <div style="display:flex; justify-content:center; align-items:center; gap:64px; margin-bottom:10px;">
                        <img src="@pais.flags.png" alt="Bandeira" style="width:100px; border-radius:8px; box-shadow:0 2px 8px #00000040; background:#fff;" />
                        <div style="height:100px; width:4px; background:linear-gradient(180deg,#b18aff 0%,#7c3aed 100%); border-radius:2px;"></div>
                        <img src="@pais.coatOfArms.png" alt="Brasão" style="width:80px; border-radius:8px; box-shadow:0 2px 8px #00000040; background:#fff;" />
                    </div>
                    <h2 style="color:#b18aff; font-family:'Orbitron',sans-serif; font-size:1.5rem; margin-bottom:8px;">@pais.name.common (@pais.cca2/@pais.cca3)</h2>
                    <span style="color:#fff; font-size:1rem;">@pais.name.official</span><br />
                    <span style="color:#b18aff; font-size:1rem;">Nome nativo:</span> <span style="color:#fff;">@(pais.name?.nativeName?.por?.common != null ? pais.name.nativeName.por.common : "-")</span><br />
                </div>
                <div style="margin-top:18px;">
                    <span style="color:#b18aff;font-weight:600;">Capital:</span> <span style="color:#fff;">@(pais?.capital != null && pais.capital.Count > 0 ? pais.capital[0] : "-")</span><br />
                    <span style="color:#b18aff;font-weight:600;">Região:</span> <span style="color:#fff;">@(pais?.region != null ? pais.region : "-")</span><br />
                    <span style="color:#b18aff;font-weight:600;">Sub-região:</span> <span style="color:#fff;">@(pais?.subregion != null ? pais.subregion : "-")</span><br />
                    <span style="color:#b18aff;font-weight:600;">Idioma(s) oficial(is):</span> <span style="color:#fff;">
                        @if (pais?.languages != null)
                        {
                            var idiomas = new List<string>();
                            foreach (var lang in pais.languages)
                            {
                                idiomas.Add(lang?.Value?.ToString() ?? "-");
                            }
                            @(idiomas.Count > 0 ? string.Join(", ", idiomas) : "-")
                        }
                        else
                        {
                            @:"-"
                        }
                    </span><br />
                    <span style="color:#b18aff;font-weight:600;">População:</span> <span style="color:#fff;">@(pais?.population != null ? pais.population : "-")</span><br />
                    <span style="color:#b18aff;font-weight:600;">Área:</span> <span style="color:#fff;">@(pais?.area != null ? pais.area + " km²" : "-")</span><br />
                    <span style="color:#b18aff;font-weight:600;">Moeda:</span> <span style="color:#fff;">@(pais?.currencies?.BRL?.name != null ? pais.currencies.BRL.name : "-") (@(pais?.currencies?.BRL?.symbol != null ? pais.currencies.BRL.symbol : "-"))</span><br />
                    <span style="color:#b18aff;font-weight:600;">Fuso(s) horário(s):</span> <span style="color:#fff;">@(pais?.timezones != null ? string.Join(", ", pais.timezones) : "-")</span><br />
                    <span style="color:#b18aff;font-weight:600;">Países fronteiriços:</span> <span style="color:#fff;">@(pais?.borders != null ? string.Join(", ", pais.borders) : "-")</span><br />
                    <span style="color:#b18aff;font-weight:600;">Google Maps:</span> <a href="@(pais?.maps?.googleMaps != null ? pais.maps.googleMaps : "#")" target="_blank" style="color:#4309b6;">Ver localização</a><br />
                </div>
            </div>
        }
    }
</div>
