@{
    ViewData["Title"] = "GloboClima - Dashboard";
}

<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

<style>
    body, html {
        height: 100%;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, #0f0c1a 0%, #18141d 30%, #2a1b3d 100%);
        font-family: 'Inter', sans-serif;
        overflow-x: hidden;
    }

    /* Animação de fundo com partículas */
    .particles {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 1;
    }

    .particle {
        position: absolute;
        width: 2px;
        height: 2px;
        background: #a020f0;
        border-radius: 50%;
        animation: float 20s infinite linear;
        opacity: 0.6;
    }

    @@keyframes float {
        0% {
            transform: translateY(100vh) translateX(0px);
            opacity: 0;
        }
        10% {
            opacity: 0.6;
        }
        90% {
            opacity: 0.6;
        }
        100% {
            transform: translateY(-10px) translateX(100px);
            opacity: 0;
        }
    }

    /* Container principal */
    .gc-home-container {
        display: flex;
        min-height: 100vh;
        position: relative;
        z-index: 2;
    }

    /* Menu lateral modernizado */
    .gc-sidebar {
        width: 280px;
        background: rgba(42, 34, 54, 0.9);
        backdrop-filter: blur(10px);
        border-right: 1px solid rgba(160, 32, 240, 0.3);
        padding: 2rem 1.5rem;
        box-shadow: 4px 0 20px rgba(160, 32, 240, 0.1);
        display: flex;
        flex-direction: column;
        position: relative;
        overflow-y: auto;
    }

    .gc-sidebar::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: linear-gradient(180deg, rgba(160, 32, 240, 0.1) 0%, rgba(124, 58, 237, 0.05) 50%, rgba(42, 34, 54, 0.8) 100%);
        z-index: -1;
    }

    /* Logo */
    .gc-logo {
        font-family: 'Orbitron', sans-serif;
        font-size: 1.8rem;
        font-weight: 900;
        color: #a020f0;
        margin-bottom: 3rem;
        text-align: center;
        letter-spacing: 2px;
        text-shadow: 0 0 20px rgba(160, 32, 240, 0.5);
        animation: glow 2s ease-in-out infinite alternate;
    }

    @@keyframes glow {
        from {
            text-shadow: 0 0 20px rgba(160, 32, 240, 0.5);
        }
        to {
            text-shadow: 0 0 30px rgba(160, 32, 240, 0.8), 0 0 40px rgba(160, 32, 240, 0.3);
        }
    }

    /* Menu de navegação */
    .gc-nav {
        flex: 1;
    }

    .gc-nav-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .gc-nav-item {
        margin-bottom: 1rem;
    }

    .gc-nav-link {
        display: flex;
        align-items: center;
        padding: 1rem 1.2rem;
        color: #e2e8f0;
        text-decoration: none;
        border-radius: 12px;
        border: 1px solid rgba(160, 32, 240, 0.3);
        background: rgba(42, 34, 54, 0.6);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        font-family: 'Inter', sans-serif;
        font-weight: 500;
        font-size: 0.95rem;
        position: relative;
        overflow: hidden;
    }

    .gc-nav-link::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(90deg, transparent, rgba(160, 32, 240, 0.2), transparent);
        transition: left 0.5s;
    }

    .gc-nav-link:hover::before {
        left: 100%;
    }

    .gc-nav-link:hover {
        background: rgba(160, 32, 240, 0.2);
        border-color: #a020f0;
        color: #ffffff;
        transform: translateX(5px);
        box-shadow: 0 4px 15px rgba(160, 32, 240, 0.3);
    }

    .gc-nav-icon {
        margin-right: 0.8rem;
        font-size: 1.1rem;
        width: 20px;
        text-align: center;
    }

    /* Dropdown de Favoritos */
    .gc-favorites {
        margin-top: 2rem;
    }

    .gc-favorites-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 1rem 1.2rem;
        background: rgba(160, 32, 240, 0.15);
        border: 1px solid rgba(160, 32, 240, 0.4);
        border-radius: 12px;
        color: #ffffff;
        cursor: pointer;
        transition: all 0.3s ease;
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        margin-bottom: 0.5rem;
    }

    .gc-favorites-header:hover {
        background: rgba(160, 32, 240, 0.25);
        border-color: #a020f0;
    }

    .gc-favorites-icon {
        transition: transform 0.3s ease;
    }

    .gc-favorites-expanded .gc-favorites-icon {
        transform: rotate(180deg);
    }

    .gc-favorites-list {
        max-height: 0;
        overflow: hidden;
        transition: max-height 0.3s ease;
        padding-left: 1rem;
    }

    .gc-favorites-expanded .gc-favorites-list {
        max-height: 200px;
    }

    .gc-favorites-item {
        margin-bottom: 0.5rem;
    }

    .gc-favorites-link {
        display: flex;
        align-items: center;
        padding: 0.8rem 1rem;
        color: #cbd5e1;
        text-decoration: none;
        border-radius: 8px;
        background: rgba(42, 34, 54, 0.4);
        border: 1px solid rgba(160, 32, 240, 0.2);
        transition: all 0.3s ease;
        font-size: 0.9rem;
    }

    .gc-favorites-link:hover {
        background: rgba(160, 32, 240, 0.15);
        color: #ffffff;
        border-color: rgba(160, 32, 240, 0.4);
    }

    /* Botão de Logout */
    .gc-logout {
        margin-top: auto;
        padding-top: 2rem;
        border-top: 1px solid rgba(160, 32, 240, 0.2);
    }

    .gc-logout-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1rem 1.2rem;
        color: #f87171;
        text-decoration: none;
        border-radius: 12px;
        border: 1px solid rgba(248, 113, 113, 0.3);
        background: rgba(239, 68, 68, 0.1);
        transition: all 0.3s ease;
        font-family: 'Inter', sans-serif;
        font-weight: 600;
        font-size: 0.95rem;
        cursor: pointer;
        width: 100%;
        box-sizing: border-box;
    }

    .gc-logout-btn:hover {
        background: rgba(239, 68, 68, 0.2);
        border-color: #f87171;
        color: #ffffff;
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(239, 68, 68, 0.3);
    }

    .gc-logout-icon {
        margin-right: 0.8rem;
        font-size: 1.1rem;
    }

    /* Área de conteúdo principal */
    .gc-main-content {
        flex: 1;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        position: relative;
        z-index: 2;
    }

    /* Welcome section */
    .gc-welcome {
        background: rgba(42, 34, 54, 0.8);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(160, 32, 240, 0.3);
        border-radius: 20px;
        padding: 3rem;
        text-align: center;
        box-shadow: 0 8px 32px rgba(160, 32, 240, 0.1);
        margin-bottom: 2rem;
        position: relative;
        overflow: hidden;
    }

    .gc-welcome::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: radial-gradient(circle, rgba(160, 32, 240, 0.1) 0%, transparent 70%);
        animation: rotate 20s linear infinite;
    }

    @@keyframes rotate {
        0% { transform: rotate(0deg); }
        100% { transform: rotate(360deg); }
    }

    .gc-welcome-content {
        position: relative;
        z-index: 1;
    }

    .gc-welcome-title {
        font-family: 'Orbitron', sans-serif;
        font-size: 2.5rem;
        font-weight: 700;
        color: #ffffff;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #a020f0, #7c3aed);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .gc-welcome-subtitle {
        font-size: 1.2rem;
        color: #cbd5e1;
        margin-bottom: 2rem;
        font-weight: 400;
    }

    .gc-welcome-description {
        font-size: 1rem;
        color: #94a3b8;
        line-height: 1.6;
        max-width: 600px;
        margin: 0 auto;
    }

    /* Quick actions */
    .gc-quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .gc-quick-action {
        background: rgba(42, 34, 54, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(160, 32, 240, 0.3);
        border-radius: 16px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
    }

    .gc-quick-action:hover {
        transform: translateY(-5px);
        border-color: #a020f0;
        box-shadow: 0 10px 30px rgba(160, 32, 240, 0.2);
        background: rgba(160, 32, 240, 0.1);
    }

    .gc-quick-action-icon {
        font-size: 2.5rem;
        color: #a020f0;
        margin-bottom: 1rem;
        display: block;
    }

    .gc-quick-action-title {
        font-family: 'Inter', sans-serif;
        font-size: 1.1rem;
        font-weight: 600;
        color: #ffffff;
        margin-bottom: 0.5rem;
    }

    .gc-quick-action-desc {
        font-size: 0.9rem;
        color: #94a3b8;
        line-height: 1.4;
    }

    /* Responsividade */
    @@media (max-width: 768px) {
        .gc-home-container {
            flex-direction: column;
        }

        .gc-sidebar {
            width: 100%;
            padding: 1rem;
            border-right: none;
            border-bottom: 1px solid rgba(160, 32, 240, 0.3);
        }

        .gc-logo {
            font-size: 1.5rem;
            margin-bottom: 1.5rem;
        }

        .gc-nav-list {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .gc-nav-item {
            margin-bottom: 0;
            flex: 1;
            min-width: 120px;
        }

        .gc-nav-link {
            padding: 0.8rem;
            font-size: 0.85rem;
            justify-content: center;
        }

        .gc-nav-icon {
            margin-right: 0.5rem;
        }

        .gc-favorites {
            margin-top: 1rem;
        }

        .gc-main-content {
            padding: 1rem;
        }

        .gc-welcome {
            padding: 2rem;
        }

        .gc-welcome-title {
            font-size: 2rem;
        }

        .gc-quick-actions {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .gc-quick-action {
            padding: 1.5rem;
        }
    }

    @@media (max-width: 480px) {
        .gc-welcome-title {
            font-size: 1.5rem;
        }

        .gc-welcome-subtitle {
            font-size: 1rem;
        }

        .gc-quick-action-icon {
            font-size: 2rem;
        }
    }
</style>

<!-- Partículas de fundo -->
<div class="particles" id="particles"></div>

<div class="gc-home-container">
    <!-- Sidebar -->
    <nav class="gc-sidebar">
        <div class="gc-logo">GloboClima</div>
        
        <div class="gc-nav">
            <ul class="gc-nav-list">
                <li class="gc-nav-item">
                    <a href="/Home/ConsultarClimaCidade" class="gc-nav-link">
                        <i class="fas fa-city gc-nav-icon"></i>
                        Consultar Clima Cidade
                    </a>
                </li>
                <li class="gc-nav-item">
                    <a href="/Consult/ConsultCountry" class="gc-nav-link">
                        <i class="fas fa-globe gc-nav-icon"></i>
                        Consultar País
                    </a>
                </li>
            </ul>

            <!-- Dropdown de Favoritos -->
            <div class="gc-favorites" id="favoritesSection">
                <div class="gc-favorites-header" id="favoritesToggle">
                    <span><i class="fas fa-heart"></i> Favoritos</span>
                    <i class="fas fa-chevron-down gc-favorites-icon"></i>
                </div>
                <div class="gc-favorites-list">
                    <div class="gc-favorites-item">
                        <a href="/Favorites/Cidades" class="gc-favorites-link">
                            <i class="fas fa-building gc-nav-icon"></i>
                            Cidades Favoritas
                        </a>
                    </div>
                    <div class="gc-favorites-item">
                        <a href="/Favorites/Paises" class="gc-favorites-link">
                            <i class="fas fa-flag gc-nav-icon"></i>
                            Países Favoritos
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botão de Logout -->
        <div class="gc-logout">
            <form method="post" action="@Url.Action("Logout", "Login")" style="width: 100%;">
                <button type="submit" class="gc-logout-btn">
                    <i class="fas fa-sign-out-alt gc-logout-icon"></i>
                    Sair
                </button>
            </form>
        </div>
    </nav>

    <!-- Conteúdo Principal -->
    <main class="gc-main-content">
        @if (ViewBag.Form == "ConsultarClimaCidade")
        {
            <partial name="~/Views/Home/ConsultarClimaCidade.cshtml" />
        }
        else if (ViewBag.Form == "ConsultarPais")
        {
            <partial name="~/Views/Home/ConsultarPais.cshtml" />
        }
        else if (ViewBag.Form == "FavoritesCidades")
        {
            <partial name="~/Views/Home/FavoritesCidades.cshtml" />
        }
        else if (ViewBag.Form == "FavoritesPaises")
        {
            <partial name="~/Views/Home/FavoritesPaises.cshtml" />
        }
        else
        {
            <!-- Welcome Section -->
            <div class="gc-welcome">
                <div class="gc-welcome-content">
                    <h1 class="gc-welcome-title">Bem-vindo ao GloboClima!</h1>
                    <p class="gc-welcome-subtitle">Sua plataforma completa para consultas meteorológicas</p>
                    <p class="gc-welcome-description">
                        Explore informações climáticas detalhadas de cidades ao redor do mundo, 
                        consulte dados de países e gerencie seus locais favoritos para acesso rápido.
                    </p>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="gc-quick-actions">
                <a href="/Home/ConsultarClimaCidade" class="gc-quick-action">
                    <i class="fas fa-city gc-quick-action-icon"></i>
                    <div class="gc-quick-action-title">Consultar Clima</div>
                    <div class="gc-quick-action-desc">Verifique o clima atual e previsões de qualquer cidade</div>
                </a>
                
                <a href="/Consult/ConsultCountry" class="gc-quick-action">
                    <i class="fas fa-globe gc-quick-action-icon"></i>
                    <div class="gc-quick-action-title">Consultar País</div>
                    <div class="gc-quick-action-desc">Explore informações detalhadas sobre países</div>
                </a>
                
                <a href="/Favorites/Cidades" class="gc-quick-action">
                    <i class="fas fa-heart gc-quick-action-icon"></i>
                    <div class="gc-quick-action-title">Favoritos</div>
                    <div class="gc-quick-action-desc">Acesse rapidamente seus locais favoritos</div>
                </a>
            </div>
        }
    </main>
</div>

<script>
    // Criar partículas de fundo
    function createParticles() {
        const container = document.getElementById('particles');
        const particleCount = 50;
        
        for (let i = 0; i < particleCount; i++) {
            const particle = document.createElement('div');
            particle.className = 'particle';
            particle.style.left = Math.random() * 100 + '%';
            particle.style.animationDuration = (Math.random() * 20 + 10) + 's';
            particle.style.animationDelay = Math.random() * 20 + 's';
            container.appendChild(particle);
        }
    }

    // Toggle do dropdown de favoritos
    function setupFavoritesToggle() {
        const toggle = document.getElementById('favoritesToggle');
        const section = document.getElementById('favoritesSection');
        
        if (toggle && section) {
            toggle.addEventListener('click', function() {
                section.classList.toggle('gc-favorites-expanded');
            });
        }
    }

    // Animação de entrada suave
    function setupEntranceAnimations() {
        const elements = document.querySelectorAll('.gc-nav-item, .gc-quick-action');
        elements.forEach((element, index) => {
            element.style.opacity = '0';
            element.style.transform = 'translateY(20px)';
            
            setTimeout(() => {
                element.style.transition = 'all 0.6s ease';
                element.style.opacity = '1';
                element.style.transform = 'translateY(0)';
            }, 300 + (index * 100));
        });
    }

    // Inicialização
    document.addEventListener('DOMContentLoaded', function() {
        createParticles();
        setupFavoritesToggle();
        setupEntranceAnimations();
    });
</script>
